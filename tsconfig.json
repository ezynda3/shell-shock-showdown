{
  "compilerOptions": {
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "target": "ES2020", // More stable target
    "moduleResolution": "node", // More stable resolution strategy
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true // Can help with decorator-related third-party
  }
}
