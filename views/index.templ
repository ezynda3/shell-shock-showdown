package views

templ Index() {
	@Layout(true) {
		<div style="width: 100%; height: calc(100vh - 64px);" data-signals="{update: ''}">
			<game-component data-on-player-movement__case.kebab="$update = JSON.stringify(evt.detail); @post('/update')"></game-component>
		</div>
		<div style="display: none;">
			<!-- Hidden img to preload the sky image -->
		</div>
	}
}
